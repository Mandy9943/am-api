{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 160,
      "minLength": 5,
      "unique": true
    },
    "quantity": {
      "type": "integer"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "meta_description": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "meta_title": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "agotado": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "float",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "CUP",
        "USD",
        "MLC"
      ],
      "default": "CUP",
      "required": true
    },
    "discount_percentage": {
      "type": "string"
    },
    "colors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::color.color",
      "inversedBy": "products"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "products"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::seller.seller",
      "inversedBy": "products"
    }
  }
}
